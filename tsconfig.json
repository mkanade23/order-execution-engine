{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",

    "rootDir": "src",
    "outDir": "dist",

    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,

    "types": ["node", "jest"]
  },
  "include": ["src/**/*"]
}
